root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
tab_width = 4

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.py,*.pyw}]
max_line_length = 130

[{*.yaml,*.yml}]
indent_size = 2
max_line_length = off

[{*.md,*.markdown}]
max_line_length = off
